<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="FragmentArticleDetailTitle">
        <item name="android:textColor">@color/text_icon</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingBottom">@dimen/padding_4</item>
        <item name="android:textSize">@dimen/fragment_article_detail_title</item>
    </style>

    <style name="FragmentArticleDetailByline">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>

    </style>

    <style name="FragmentArticleDetailBody">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_article_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FragmentArticleDetailButton">
        <item name="android:background">@color/accent_color</item>
        <item name="android:textColor">@color/text_icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingStart">@dimen/padding_32</item>
        <item name="android:paddingEnd">@dimen/padding_32</item>
    </style>

    <style name="ListItemArticleTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingTop">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_0</item>
        <item name="android:textSize">@dimen/list_item_article_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemArticleSubTitle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_16</item>
    </style>

</resources>
